
password_check = lambda password: len(password) >= 8 and any(char.islower() for char in password) and any(char.isupper() for char in password) and any(char.isdigit() for char in password)
password = "Secure123"

if password_check(password):
    print(password, "is a valid password")
else:
    print(password, "is not a valid password")
